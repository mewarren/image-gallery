{
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "no-console": "warn",
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "space-in-parens": ["error"],
        "space-infix-ops": "error",
        "object-curly-spacing": ["error", "always"],
        "comma-spacing": "error",
        "space-before-function-paren": ["error", "never"],
        "keyword-spacing": [
          "error", 
          { 
            "before": true, 
            "after": true,
            "overrides": {
              "if": { "after": false },
              "for": { "after": false },
              "while": { "after": false },
              "do": { "after": false }
            } 
          }
        ],
        "array-bracket-spacing": "error"
    }
  }